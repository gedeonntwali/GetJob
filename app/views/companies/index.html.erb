<div class="container">
  <div class="row">
    <div class="col-md-6">
    <% if current_user %>
      <%= button_to "Add New Company", "/companies/new", method: :get %>
    <% end %>
    </div>
    <div class="col-md-12">
      <% @companies.each_slice(3) do |three_companies| %>
        <div class="row">
          <% three_companies.each do |company| %>
            <div class="col-md-4">
              <div class="jumbotron">
              <h4><%= link_to company.name, "/companies/#{company.id}" %></h4>
              <p><strong>Address</strong>: <%= company.address %></p>
              <p style="font-size: 17px;"><strong>Description</strong>: <%= truncate company.description, length: 250 %> | <%= link_to 'Read More', "/companies/#{company.id}" %></p>
              </div>
            </div>
          <% end %>
         </div>
      <% end %>
    </div>
  </div>
</div>


