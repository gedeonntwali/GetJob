<div class="container">
 <div class="rows">
   <div class="col-md-6">
      <h4> Create Company </h4>

      <%= form_tag "/companies", method: :post do %>
      
        <form>
            <div class="form-group">
              <label class="control-label" for="focusedInput">Company Name</label>
              <input class="form-control" id="focusedInput" type="text" name="name">
            </div>

            <div class="form-group">
              <label class="control-label" for="focusedInput">Company Address</label>
              <input class="form-control" id="focusedInput" type="text" name="address">
            </div>

            <div class="form-group">
              <label for="focusedInput">Email address</label>
              <input type="email" class="form-control" id="focusedInput" name="email" aria-describedby="emailHelp" placeholder="Enter email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
              <label for="focusedInput">Company Description</label>
              <textarea class="form-control" name="description" id="focusedInput" rows="3"></textarea>
            </div>

            <div class="checkbox">
            <input type="submit" class="btn btn-primary active" name="Create Account">
          </div>

        </form>

      <% end %>
    </div>
  </div>
</div>

