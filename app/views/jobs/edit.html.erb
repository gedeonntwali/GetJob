<h1> Edit Job Post </h1>

<%= form_tag "/jobs/#{@job.id}", method: :patch do%>

<form>

  <div class="form-group">
    <label for="title">Title of the Job</label>
    <input type="text" class="form-control" name="title" id="title"  value="<%= @job.title %>">
  </div>


  <div class="form-group">
    <label for="description">Job Description</label>
    <textarea class="form-control" name="description" id="description" rows="3" value="<%= @job.description%>"></textarea>
  </div>
 

  <div class="checkbox">
      <input type="submit" class="btn btn-default" name="Create a New Job Post">
  </div>
  </form>
<% end %>