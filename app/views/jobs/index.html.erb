<h1> All JObs Available</h1>

<div class="container-fluid">
  <div class="row">
    <% @jobs.each_slice(3) do |three_jobs| %>
      <div class="row">
          <% three_jobs.each do |job| %>
            <div class="col-md-4">
              <h4><%= link_to job.title, "/jobs/#{job.id}" %></h4>
              <h4>Description: <%= job.description %></h4>
            </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>

