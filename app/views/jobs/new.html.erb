<h1> New Job Post </h1>


<%= form_tag "/jobs", method: :post do %>

  <form > 

    <div class="form-group">
      Title  <input type="text" class="form-group" name="title">
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" rows="3"></textarea>
    </div>


    <div class="checkbox">
      <input type="submit" class="btn btn-default" name="Create a New Post">
    </div>
  </form>
<% end %>

