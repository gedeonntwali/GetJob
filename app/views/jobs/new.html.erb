<div class="container">
  <div class="row">
    <div class="col-md-6">

      <h1> New Job Post </h1>

      <%= form_tag "/jobs", method: :post do %>

      <form >

      <div class="form-group">
        <label for="focusedInput">Title of the Job</label>
        <input type="text" class="form-control" name="title" id="focusedInput"  placeholder="Enter the title">
      </div>


      <div class="form-group">
        <label for="focusedInput">Job Description</label>
        <textarea class="form-control" name="description" id="focusedInput" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="focusedInput">Job Responsabilites</label>
        <textarea class="form-control" name="job_responsability" id="focusedInput" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="focusedInput">Job Requirements</label>
        <textarea class="form-control" name="job_requirement" id="focusedInput" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="example-date-input">Deadline</label>
        <input type="date" class="form-control" name="deadline" id="example-date-input"  placeholder="Enter the deadline">
      </div>
     

      <div class="checkbox">
          <input type="submit" class="btn btn-default" name="Create a New Job Post">
      </div>
      </form>

      <% end %>
    </div>
  </div>
</div>

