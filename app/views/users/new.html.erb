<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2> Create New Account </h2>
      <%= form_tag '/users', method: :post do  %>
        
        <form>

          <div class="form-group">
            <label class="control-label" for="focusedInput">First Name</label>
            <input type="text" class="form-control" id="focusedInput" name="first_name">
          </div>

          <div class="form-group">
            <label for="focusedInput">Last Name</label>
            <input type="text" class="form-control" id="focusedInput" name="last_name">
          </div>

          <div class="form-group">
            <label for="focusedInput">Email address</label>
            <input type="email" class="form-control" id="focusedInput" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

          <div class="form-group">
            <label for="focusedInput">Create Password</label>
            <input type="password" class="form-control" id="focusedInput" name="password">
          </div>

          <div class="form-group">
            <label for="focusedInput">Confirm your Password</label>
            <input type="password" class="form-control" id="focusedInput" name="password_confirmation">
          </div>

          <div class="form-group">
            <label for="focusedInput">Select your User Type</label>
            <select class="form-control" id="focusedInput" name="role_id">
              <% @roles.each do |role| %>
              <option value="<%= role.id %>" <%= "selected" if @user.role_id == role.id %>><%= role.user_type %></option>
              <% end %>
            </select>
          </div>


          <div class="checkbox">
              <input type="submit" class="btn btn-primary active" name="Create a New Job Post">
          </div>
       </form>
       <% end %>
    </div>
  </div>
</div>




