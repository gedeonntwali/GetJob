<div class="container-fluid">
<div class="row">

  <div class="col-md-2">
    <img src="<%= image_url('getjoblogo.png')%>">
    <%= button_to "Add New Job Post", "/jobs/new", method: :get %>
    </div>

    <div class="flipkart-navbar-search smallsearch col-md-8 col-xs-1">
      <%= form_tag "/jobs/search", method: :post do %>
        <div class="form">
          <label for="focusedInput"></label>
          <input type="text" class="focusedInput" placeholder="Search a job......" name="search_input">
          <button type="submit" class="btn btn-primary active">Submit</button>
        </div>
      <% end %>
    </div>
 


  <div class="col-md-8">
    <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>
    <p><strong>Email: </strong><%= current_user.email %></p>
    <h3> Company </h3>
    <% current_user.companies.each do |company| %>
        <h4><%= link_to company.name, "/companies/#{company.id}" %></h4>
        <p><%= company.description %></p>
        <p><strong>Address   </strong><%= company.address %></p>
    <% end %>
    <h3> Job Posts </h3>
    <% current_user.jobs.each do |job| %>
        <h4><%= link_to job.title, "/jobs/#{job.id}" %></h4>
        <p><%= job.description %></p>
        <p><strong>Deadline   </strong><%= job.deadline %></p>     
    <% end %> 
  </div>
    

  </div>
</div>

